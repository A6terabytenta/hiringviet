<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/views/decorators">
	<excludes>
		<pattern>/login**</pattern>
		<pattern>/logout</pattern>
	</excludes>
	<decorator name="default" page="main-layout.jsp">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="home" page="home-layout.jsp">
		<pattern>/home</pattern>
	</decorator>
	<decorator name="profile" page="profile-layout.jsp">
		<pattern>/profile</pattern>
	</decorator>
	<decorator name="company" page="company-layout.jsp">
		<pattern>/company/*</pattern>
	</decorator>
	<decorator name="admin" page="admin-layout.jsp">
		<pattern>/admin*</pattern>
	</decorator>
</decorators>